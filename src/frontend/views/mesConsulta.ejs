<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="preconnect" href="https://rsms.me/" />
  <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
  <title>Mês da consulta</title>
</head>
<body>

    <section class="slide" id="tab-portfolio">
      <h1>Escolha um Mês</h1>
      <div class="cards" id="mes">
        <div class="card">
          <span class="card-text">Junho</span>
          <div class="button-container">
            <button class="custom-btn escolher-mes junho">Escolher</button>
          </div>
        </div>
        <div class="card">
          <span class="card-text">Julho</span>
          <div class="button-container">
            <button class="custom-btn escolher-mes julho">Escolher</button>
          </div>
        </div>
        <div class="card">
          <span class="card-text">Agosto</span>
          <div class="button-container">
            <button class="custom-btn escolher-mes agosto">Escolher</button>
          </div>
        </div>
        <div class="card">
          <span class="card-text">Setembro</span>
          <div class="button-container">
            <button class="custom-btn escolher-mes setembro">Escolher</button>
          </div>
        </div>
      </div>
    </section>

</body>
</html>

<script>
   // Obtém todos os botões "Escolher"
   const buttons = document.querySelectorAll(".escolher-mes");
  buttons.forEach((button) => {
    button.addEventListener("click", function () {
      const mesEscolhido = this.classList[2]; // Obtém a classe do botão clicado (junho, julho, agosto, setembro)
      const idMedicos = "<%= idMedicos %>";
      const idPaciente = "<%= idPaciente %>";

      fetch("/mesConsulta/"+ idPaciente + "/" +idMedicos, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ mes: mesEscolhido }),
      })
        .then((response) => response.text())
        .then((result) => {
          console.log(result);
          // Redireciona para a rota específica do mês escolhido
          window.location.href = "/" + mesEscolhido;
        })
        .catch((error) => {
          console.error("Erro:", error);
        });
    });
  });
</script>


<style>
  :root {
    font-family: "Inter", sans-serif;
  }

  :root {
    font-family: "Inter var", sans-serif;
  }

  * {
    font-family: "Inter";
    margin: 0;
    padding: 0;
  }

  slide {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 100%;
    position: relative;
    background: #eee;
    text-align: center;
    padding: 0 2em;
    font-size: 2rem;
    margin: 0;
    letter-spacing: 1rem;
  }

  h1 {
    display: flex;
    justify-content: center;
    padding: 20px;
    font-size: 45px;
  }

  #tab-portfolio {
    background-color: rgb(255, 255, 255);
    color: #000000;
    flex-direction: column;
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    margin: 0 auto;
    max-width: 1140px;
    padding: 20px 28px;
    grid-gap: 30px;
    align-items: center; /* Updated to center align items */
  }

  .card {
    display: flex;
    flex-direction: column; /* Adicionado para posicionar o botão abaixo do mês */
    justify-content: center; /* Adicionado para alinhar verticalmente */
    align-items: center; /* Adicionado para alinhar horizontalmente */
    background-color: #49a2eb;
    border-radius: 20px;
    box-shadow: 0 2px 2px 1px rgba(0, 0, 0, 0.1);
    width: 100%;
    height: 240px;
    transition: transform 0.3s cubic-bezier(0.374, 0.019, 0.035, 1.861);
  }

  .card:hover {
    transform: scale(1.03);
  }
  .button-container {
    margin-top: 10px; /* Adicionado para dar espaço entre o mês e o botão */
  }

  button {
    display: block;
    justify-content: center;
    align-content: center;
  }

  .custom-btn {
    width: 130px;
    height: 40px;
    color: #fff;
    border-radius: 5px;
    padding: 10px 25px;
    font-weight: 500;
    background: transparent;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    display: inline-block;
    box-shadow: inset 2px 2px 2px 0px rgba(255, 255, 255, 0.5),
      7px 7px 20px 0px rgba(0, 0, 0, 0.1), 4px 4px 5px 0px rgba(0, 0, 0, 0.1);
    outline: none;
  }

  .custom-btn:before,
  .custom-btn:after {
    position: absolute;
    content: "";
    right: 0;
    top: 0;
    background: rgba(2, 126, 251, 1);
    transition: all 0.3s ease;
  }

  .custom-btn:hover {
    background: transparent;
    box-shadow: none;
  }

  /* Added CSS for the month text */
  .card-text {
    font-size: 24px;
    font-weight: bold;
    color: #ffffff;
  }
</style>
