<script>
    // Obtém todos os botões "Escolher"
    const buttons = document.querySelectorAll(".custom-btn");
  
    // Adiciona um ouvinte de evento de clique a cada botão
    buttons.forEach((button) => {
      button.addEventListener("click", function () {
        // Obtém o texto do mês escolhido
        const mesEscolhido = this.parentNode.previousElementSibling.innerText;
  
        // Faz uma requisição POST para enviar o mês escolhido ao servidor
        fetch("/diaConsulta", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ mes: mesEscolhido }),
        })
          .then((response) => response.text())
          .then((result) => {
            console.log(result);
            // Faça algo com a resposta do servidor, se necessário
          })
          .catch((error) => {
            console.error("Erro:", error);
          });
      });
    });
  </script>
