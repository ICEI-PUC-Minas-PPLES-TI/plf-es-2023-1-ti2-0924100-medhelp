    $("#escolher-janeiro").click(function () {
      // Obtém o valor selecionado do mês
      var mesSelecionado = $("#mes").val();
      // Obtém o ID do médico
      var idMedico = "<%= medico.id_medico %>"; // Certifique-se de que o objeto medico esteja disponível na página
      // Redireciona para a página diaConsulta com os parâmetros do mês e do ID do médico
      window.location.href = "/diaConsulta/" + mesSelecionado + "/" + idMedico;
    });
  });
</script>



