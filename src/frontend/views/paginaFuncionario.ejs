</html>


<script>


// Selecionar os botões de acesso
const cadastroBtn = document.getElementById("cadastroBtn");
const estoqueBtn = document.getElementById("estoqueBtn");
const pagamentoBtn = document.getElementById("pagamentoBtn");

// Adicionar um ouvinte de evento de clique aos botões
cadastroBtn.addEventListener("click", function () {
  // Redirecionar o médico para a página consultasMedico.ejs
  window.location.href = "/cadastroMedicos";
});

estoqueBtn.addEventListener("click", function () {
  // Redirecionar o médico para a página listarEquipamentos.ejs
  window.location.href = "/atualizarEstoque";
});

pagamentoBtn.addEventListener("click", function () {
  // Redirecionar o médico para a página listarEquipamentos.ejs
  window.location.href = "/consultasFuncionario";
});

</script>
