</form>

  <div class="overlay">
    <div class="overlay-content">
      <h2>Selecione um horário</h2>
      <INPUT TYPE="radio" NAME="horario" VALUE="12h/13h" > 12h até 13h<br>
      <INPUT TYPE="radio" NAME="horario" VALUE="13h/14h"> 13h até 14h<br>
     <INPUT TYPE="radio" NAME="horario" VALUE="14h/15h"> 14h até 15h<br> 
      <INPUT TYPE="radio" NAME="horario" VALUE="15h/16h"> 15h até 16h <br>
      <INPUT TYPE="radio" NAME="horario" VALUE="16h/17h"> 16h até 17h <br>
     <INPUT TYPE="radio" NAME="horario" VALUE="17h/18h"> 17h até 18h <br><br>
      <button id="confirmButton">Confirmar</button>
      <button id="cancelButton">Cancelar</button>
    </div>
  </div>

  <div id="newEventModal">
    <h3>Novo Evento</h3>
    <input type="text" id="eventTitleInput" placeholder="Título do evento" />
    <textarea id="eventTextInput" placeholder="Descrição do evento"></textarea>
    <div class="radio-group">
      <input type="radio" id="eventColor1" name="eventColor" value="#FFFCFF" checked />
      <label for="eventColor1"></label>
      <input type="radio" id="eventColor2" name="eventColor" value="#e8f4fa" />
      <label for="eventColor2"></label>
      <input type="radio" id="eventColor3" name="eventColor" value="#FFFCFF" />
      <label for="eventColor3"></label>
    </div>
    <button id="saveButton">Salvar</button>
    <button id="cancelButton">Cancelar</button>
  </div>

  <div id="deleteEventModal">
    <h3>Excluir Evento</h3>
    <p>Você tem certeza que deseja excluir este evento?</p>
    <button id="deleteButton">Excluir</button>
    <button id="closeButton">Fechar</button>
  </div>

  <div id="modalBackDrop"></div>

  <script>
    
      document.addEventListener("DOMContentLoaded", function () {
        const calendarDays = document.querySelectorAll("#calendar .day");
        const overlay = document.querySelector(".overlay");
        const confirmButton = document.getElementById("confirmButton");
        const cancelButton = document.getElementById("cancelButton");

        function handleDayClick(event) {
          const selectedDay = event.target;
          const selectedDate = selectedDay.getAttribute("value");

          // Adicionar classe "active" ao overlay para torná-lo visível
          overlay.classList.add("active");

          console.log("Data selecionada:", selectedDate);
        }

        function handleConfirmButtonClick() {
          const selectedHorario = document.querySelector("#overlay input:checked");

          console.log("Horário selecionado:", selectedHorario.value);

          // Remover classe "active" do overlay para escondê-lo
          overlay.classList.remove("active");
        }

        function handleCancelButtonClick() {
          // Remover classe "active" do overlay para escondê-lo
          overlay.classList.remove("active");
        }

        calendarDays.forEach(day => {
          day.addEventListener("click", handleDayClick);
        });

        confirmButton.addEventListener("click", handleConfirmButtonClick);
        cancelButton.addEventListener("click", handleCancelButtonClick);
      });
   
    // Obtenha todos os elementos com a classe "day"
    const days = document.getElementsByClassName("day");

    // Adicione um evento de clique a cada elemento
    Array.from(days).forEach(day => {
      day.addEventListener("click", function () {
        const diaConsulta = this.getAttribute("value");

        // Envia uma requisição POST para a rota '/salvarConsulta'
        fetch("/salvarConsulta", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({
            diaConsulta: diaConsulta
          })
        })
        .then(response => response.json())
        .then(data => {
          // Ação após salvar a consulta
          console.log(data);
        })
        .catch(error => {
          console.error(error);
        });
      });
    });
  </script>
</body>
